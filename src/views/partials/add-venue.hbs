<form class="box" action="/city/{{city._id}}/addvenue" method="POST">
  <label>Enter Venue Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Enter Venue" name="venueName" />
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Street" name="street" />
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Genre" name="genre" />
      </div>
    </div>
  </div>
  <button class="button is-primary">Add Venue</button>
</form>